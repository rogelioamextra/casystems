<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@drawable/contenedor_white"
    tools:context="com.amextra.dialogs.IneScanner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:src="@drawable/camera_lens_photography" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:text="Captura de Imagen"
            android:textColor="@color/Morado"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/input_style"
            android:src="@drawable/close_circle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnFrontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:visibility="visible"
                android:id="@+id/txtFrente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Frente del Ine"
                android:textColor="@color/BlueDark"
                android:textSize="15dp" />

            <TextView
                android:visibility="visible"
                android:id="@+id/txtReverso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Reverso del Ine"
                android:textColor="@color/BlueDark"
                android:textSize="15dp" />


            <TextView
                android:visibility="visible"
                android:id="@+id/txtSelphie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Foto del cliente"
                android:gravity="center"
                android:textColor="@color/BlueDark"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgAnverso"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/contenedor_white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgReverso"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/contenedor_white"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/imgSelphie"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/contenedor_white"
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/opcion_btn_status"
                    android:button="@android:color/transparent"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_front_id"
                    android:paddingEnd="10dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/opcion_btn_status"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_back_id"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/opcion_btn_status"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_selphie"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnCamaraF"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/purple_button"
                    android:src="@drawable/icon_camera" />

                <ImageButton
                    android:id="@+id/btnCamaraT"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/purple_button"
                    android:src="@drawable/icon_camera" />
                <ImageButton
                    android:id="@+id/btnSelphie"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/purple_button"
                    android:src="@drawable/icon_camera" />

                <ImageView
                    android:id="@+id/btnGuardar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_style_yellow_outline"
                    android:src="@drawable/comprobar" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>