<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    tools:context="com.amextra.Beans.MenuCredito">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RadioGroup
            android:id="@+id/grupoOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contenedor_menu"
            android:elevation="15dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioIngresos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_active_state"
                android:drawableTop="@drawable/ic_money"
                android:gravity="center"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:button="@android:color/transparent"
                android:text="Ingresos"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioEgresos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/btn_active_state"
                android:drawableTop="@drawable/ic_money_off"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="Egresos"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioAvales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/btn_active_state"
                android:drawableTop="@drawable/ic_person"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="Avales"
                android:layout_weight="1"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioPatrimonios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_active_state"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/ic_real_estate_agent"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="Patrimonios"
                android:layout_weight="1"
                android:textColor="@color/white" />


        </RadioGroup>


    </LinearLayout>
</RelativeLayout>