<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    tools:context="com.amextra.Beans.MenuSeccion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RadioGroup
            android:id="@+id/grupoOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contenedor_menu"
            android:elevation="15dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDatosPersonales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_active_state"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/ic_person"
                android:gravity="center"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="15sp"

                android:text="Personal"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_active_state"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/ic_person_pin_circle"
                android:gravity="center"
                android:text="DirecciÃ³n"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioDatosLaborales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_active_state"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/ic_add_business"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="Laboral"
                android:layout_weight="1"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioRefencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_active_state"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/ic_people"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Referencias"
                android:textColor="@color/white" />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>