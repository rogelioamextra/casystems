<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.amextra.Security.NewPass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_xxx">

        <ImageView
            android:id="@+id/img_view_amextraLogo"
            android:layout_width="145dp"
            android:layout_height="75dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/whitelogo3x" />

        <ImageView
            android:id="@+id/img_view_nous_logo"
            android:layout_width="300dp"
            android:layout_height="132dp"
            android:layout_below="@id/img_view_amextraLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:inputType="text"
            android:src="@drawable/logo_nous" />

        <TextView
            android:id="@+id/labelRenewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_view_nous_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Nueva Contrase침a"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCodigo"
            android:inputType="text"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_below="@id/labelRenewPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/input_style"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:hint="C칩digo"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.5"
            android:maxLength="8"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/PlaceHolderHint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_below="@id/etCodigo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_style"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:hint="Nueva Contrase침a"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/PlaceHolderHint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_below="@id/etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/input_style"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:hint="Confirmar contrase침a"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/PlaceHolderHint"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnEnviaConfirmacion"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@id/etPasswordConfirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/boton_sesion"
            android:text="Confirmar"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btnGoToInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:text="Ir al inicio "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="20dp"
            android:drawableStart="@drawable/ic_house"
            android:layout_below="@id/btnEnviaConfirmacion"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"/>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>