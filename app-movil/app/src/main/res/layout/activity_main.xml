<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_xxx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_view_amextraLogo"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/whitelogo3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_view_nous_logo"
        android:layout_width="300dp"
        android:layout_height="132dp"
        android:layout_marginTop="60dp"
        android:inputType="text"
        android:src="@drawable/logo_nous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_view_amextraLogo" />

    <EditText
        android:id="@+id/texInputEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/input_style"
        android:drawableLeft="@drawable/icon_ionic_ios_mail"
        android:drawablePadding="10dp"
        android:hint="Correo Electronico"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/PlaceHolderHint"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_view_nous_logo" />

    <EditText
        android:id="@+id/texInputPassword"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/input_style"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/PlaceHolderHint"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texInputEmail" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:text="Olvide mi contraseña"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texInputPassword" />

    <View
        android:id="@+id/viewFp"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassword" />

    <Button
        android:id="@+id/btnIniciaSesion"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/boton_sesion"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewFp" />

</androidx.constraintlayout.widget.ConstraintLayout>