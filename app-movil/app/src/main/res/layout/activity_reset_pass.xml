<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    tools:context="com.amextra.Security.ResetPass">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_xxx" />

    <ImageView
        android:id="@+id/img_view_amextraLogo"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/whitelogo3x" />

    <ImageView
        android:id="@+id/img_view_nous_logo"
        android:layout_width="300dp"
        android:layout_height="132dp"
        android:layout_below="@id/img_view_amextraLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="text"
        android:src="@drawable/logo_nous" />

    <TextView
        android:id="@+id/labelResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view_nous_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Recuperar ContraseÃ±a"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/texInputEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/labelResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/input_style"
        android:drawableLeft="@drawable/icon_ionic_ios_mail"
        android:drawablePadding="20dp"
        android:hint="Correo Electronico"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/PlaceHolderHint"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnEnviaResetPassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/texInputEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/boton_sesion"
        android:text="Enviar"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>