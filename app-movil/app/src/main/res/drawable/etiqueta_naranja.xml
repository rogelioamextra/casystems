<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item>
        <shape>
            <solid android:color="#282358" />
            <corners
                android:bottomLeftRadius="180dp"
                android:topLeftRadius="180dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item

        >
        <shape>
            <solid android:color="#282358" />
            <stroke
                android:width="2dp"
                android:color="#282358" />
            <corners
                android:bottomLeftRadius="180dp"
                android:topLeftRadius="180dp" />
        </shape>
    </item>
</layer-list>