<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        android:left="5dp"
        android:top="1dp">
        <shape>
            <solid android:color="#E5E7E9" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:bottom="2dp"
        >
        <shape>
            <stroke android:width="1dp"  android:color="#0000006A"/>
            <solid android:color="#00000029"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>